<div class="container">
    <br/>
    <div class="row">
        <%= @information.info %>
    </div>
    
    
    
    <%= form_for(@guess) do |f| %>
      <% if @guess.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@guess.errors.count, "error") %> prohibited this guess from being saved:</h2>
    
          <ul>
          <% @guess.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    
  
      <div class="row">
      <div class="input-field col s2">
        <%= f.number_field :answer, :min => "1", :max => "12", :class => "validate", length: 2, required: true %>
        <%= f.label "Month", :'data-error' => "1to12", :'data-success' => "Valid!" %>
      </div>
    </div>
      <%= f.hidden_field :kind, :value => 2 %>

  <script type="javascript">
        $('.datepicker').pickadate({
    selectMonths: true, // Creates a dropdown to control month
    selectYears: 15 // Creates a dropdown of 15 years to control year
  });
    </script>
      
<label for="birthdate">Birthdate</label>
        <input id="birthdate" type="text" class="datepicker">
          <script type="javascript">
        $('.datepicker').pickadate({
    selectMonths: true, // Creates a dropdown to control month
    selectYears: 15 // Creates a dropdown of 15 years to control year
  });
    </script>
      
      
     <div class="row">
         <div class="input-field col s2">
        <button class="btn waves-effect waves-light" type="submit" name="commit" value="Create Guess" />Guess</button>
        </div>
        </div>
    
    <% end %>
    
</div>