<div  class = "container">
    <div class="row">
  <%= form_for(@guess) do |f| %>
    <% if @guess.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@guess.errors.count, "error") %> prohibited this guess from being saved:</h2>
  
        <ul>
        <% @guess.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    </div>
    
    <div class="row">
      <div class="col s7">
        <div class="card indigo accent-1">
          <div class="card-content white-text">
            <span class="card-title"><%= @information.info %> on <%= Date::MONTHNAMES[@information.month] %> <%= @information.day.ordinalize %>, YYYY.</span>
            <p class="white-text"></p>
          </div>
          <div class="card-action">
            <div class="row">
              <div class="col offset-s4 s4 input-field">
                <%= f.number_field :answer, :min => "1700", :max => "2015", :class => "validate", required: true, :autocomplete => "off" %>
                <%= f.label :answer, "Year (YYYY)", :class => "active", :'data-error' => "1700to2015", :'data-success' => "Valid!" %>
              </div>
            </div>
            <div class="row">
              <div class="col offset-s4 s4">
                <button class="btn waves-effect waves-light" type="submit" name="action">Guess<i class="material-icons right">send</i></i></button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <%= f.hidden_field :kind, :value => 1 %>
    

    </div>
  <% end %>
</div>
