<div class="container">
    <div class="col s12 m6">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title">Good guess!</span>
                <p><%= @information.info %> on <%= Date::MONTHNAMES[@information.month] %> <%= @information.day.ordinalize %>, <%= @information.year %>
                    <br/>
                    <%= session[:totalScore] %>
                </p>
            <div class="card-action">
                <div class="row">
                    <div class="input-field col s">
                        Your guess "<%= @guess.answer %>" and gets you <%= @guess.score %> points!
                    </div>
                  </div>
                </div>
            </div>
        </div>
    </div>
</div>